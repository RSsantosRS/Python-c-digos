cont,medt,soma=1,0,0
nome= input("nome: ")
while nome != '-1':
    n1= float(input("Nota da primeira prova"))
    n2= float(input("nota da primeira prova"))
    med = (n1+n2)/2
    if med >=7:
        print(f"O aluno {nome} foi aprovado com media {med}")
    else:
        print(f"O aluno {nome} foi reprovado com media {med}")
    soma += med
    cont += 1
    nome = input("Nome: ")

medt=soma/cont
print(f"A turma tem media de: {medt}")
